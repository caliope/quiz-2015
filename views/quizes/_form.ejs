<label for="preg" class="rem">Pregunta:</label>
<p><input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" /></p>
<label for="res" class="rem">Respuesta:</label>
<p><input type="text" id="res" name="quiz[respuesta]" value="<%= quiz.respuesta %>"></p>
<label for="tem" class="rem">Tema:</label>
<p>
  <select name="quiz[tema]" id="tem">
    <option value="Otro" <%= (quiz.tema === 'Otro') ? 'selected' : '' %> >Otro</option>
    <option value="Humanidades" <%= (quiz.tema === 'Humanidades') ? 'selected' : '' %> >Humanidades</option>
    <option value="Ocio" <%= (quiz.tema === 'Ocio') ? 'selected' : '' %> >Ocio</option>
    <option value="Ciencia" <%= (quiz.tema === 'Ciencia') ? 'selected' : '' %> >Ciencia</option>
    <option value="Tecnologia" <%= (quiz.tema === 'Tecnologia') ? 'selected' : '' %> >Tecnologia</option>
  </select>
</p>
<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="Salvar">
